@using Company.Data.Models
@model Employee
@{
    var departments = new SelectList(ViewBag.Departments, nameof(Department.Id), nameof(Department.Name));
}
<form asp-action="Create">
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Age"></label>
        <input type="number" asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Address"></label>
        <input type="text" asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Email"></label>
        <input type="email" asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="PhoneNumber"></label>
        <input type="text" asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="HiringDate"></label>
        <input type="date" asp-for="HiringDate" class="form-control" />
    </div>
   <div class="form-group">
        <label class="col-form-label" asp-for="Department"></label>
        <select asp-items="@departments" asp-for="DepartmentId" class="form-control">

        <option value="@Department.Id"> -- SelectDepartment </option>
            </select>
    </div> 

    <div class="form-group">
        <label class="col-form-label" asp-for="ImageURL"></label>
        <input type="file" asp-for="ImageURL" class="form-control-file" />
    </div>
    <input type="submit" value="Create" class="btn btn-primary"/>
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>